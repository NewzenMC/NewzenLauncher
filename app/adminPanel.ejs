<div id="adminPanelContainer" style="display: none">
    <button id="backAdminPanelBtn">Retour</button>
    <div class="powerContainer">
        <label class="power">
            <input type="checkbox" id="autoScroll" checked />
            <div>
                <svg viewBox="0 0 44 44">
                    <path
                        d="M22,6 C31,6 38,13 38,22 C38,31 31,38 22,38 C13,38 6,31 6,22 C6,13 13,6 22,6 L22,28"
                        id="path"
                    ></path>
                </svg>
            </div>
        </label>
        AutoScroll
    </div>

    <div class="bg"></div>
    <div class="bg bg2"></div>
    <div class="bg bg3"></div>

    <div class="content">
        <div id="adminPanelLogin">
            <h1>Panel Admin</h1>
            <p>
                Pour accéder au Panel Admin, vous devez vérifier votre Identité,
                pour cela, vous devrez accepter la demande de connection qui
                vous sera envoyée via Discord
            </p>
            <button id="sendDiscordConfirmBtn">Vérifier mon Identité</button>
        </div>
    </div>
    <div id="adminPanelContent" style="display: none">
        <figure class="tabBlock">
            <ul class="tabBlock-tabs">
                <li class="tabBlock-tab is-active" id="adminPanelPlayersTab">
                    Joueurs
                </li>
                <li class="tabBlock-tab" id="adminPanelBungeeTab">
                    BungeeCord
                </li>
                <li class="tabBlock-tab" id="adminPanelLobbyTab">Lobby</li>
                <li class="tabBlock-tab" id="adminPanelMainTab">Main</li>
                <li class="tabBlock-tab" id="adminPanelMaintenanceTab">
                    Maintenance
                </li>
                <li class="tabBlock-tab" id="adminPanelNewzenBotTab">
                    NewzenBot
                </li>
                <li class="tabBlock-tab" id="adminPanelDevTab">
                    Développement
                </li>
            </ul>
            <div class="tabBlock-content">
                <div class="tabBlock-pane">Onglet Joueurs</div>
                <div class="tabBlock-pane">
                    <!-- Onglet Bungee -->
                    <pre><output class="terminal" id="bungeeTerm"></output></pre>
                </div>
                <div class="tabBlock-pane">
                    <!-- Onglet Lobby -->
                    <pre><output class="terminal" id="lobbyTerm"></output></pre>
                </div>
                <div class="tabBlock-pane">
                    <!-- Onglet Main -->
                    <pre><output class="terminal" id="mainTerm"></output></pre>
                </div>
                <div class="tabBlock-pane">
                    <!-- Onglet Maintenance -->
                </div>
                <div class="tabBlock-pane">
                    <!-- Onglet NewzenBot -->
                    <pre><output class="terminal" id="botTerm"></output></pre>
                </div>
                <div class="tabBlock-pane">
                    <!-- Onglet Développement -->
                </div>
            </div>
        </figure>
    </div>
    <script src="./assets/js/scripts/adminPanel.js"></script>
</div>
